<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Clear"
            android:textColor="#FFFFFFFF"/>

        <Button
            android:id="@+id/brush_size_smaller"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Bsize -"
            android:textColor="#FFFFFFFF"/>
        <Button
            android:id="@+id/brush_size_larger"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Bsize +"
            android:textColor="#FFFFFFFF"/>
        <Button
            android:id="@+id/undo_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Undo"
            android:textColor="#FFFFFFFF"/>

    </LinearLayout>




    <com.schooldev.andrew.doodleapp.DoodleClass
        android:id="@+id/doodle_canvas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="6"
        android:rowCount="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/color_btn1"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/color_btn2"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/color_btn3"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/color_btn4"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/color_btn5"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/color_btn6"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/color_btn7"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/color_btn8"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

    </GridLayout>

